{
  "manifest_version": 2,

  "name": "SerialFiller",
  "description": "Wygeneruj losowe numery PESEL.",
  "version": "1.0",

  "background": {
    "scripts": ["generators.js", "event.js"],
    "persistent": false
  },

  "content_scripts": [{ 
    "matches": [ "<all_urls>"],
    "js": ["content.js"]
  }],

  "browser_action": {
    "default_icon": "icons/icon-48.png"
  },

  "permissions": ["contextMenus"],

  "icons": { 
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}