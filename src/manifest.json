{
  "manifest_version": 2,

  "name": "SerialFiller",
  "description": "Wygeneruj losowe numery by wypełnić formularze na stronach WWW.",
  "version": "0.1.0",

  "background": {
    "scripts": ["generators.js", "menu-bindings.js", "event.js"],
    "persistent": false
  },

  "content_scripts": [{ 
    "matches": [ "<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "No fields to autofill."
  },

  "permissions": ["contextMenus", "tabs"],

  "icons": { 
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
